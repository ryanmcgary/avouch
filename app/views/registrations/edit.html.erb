<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="devise_form">
<% if request.referrer.include? "remoteurls" %>
  <%= form_for(resource, :as => resource_name, :url => "#{registration_path(resource_name)}?layout=embed", :html => { :method => :put }) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>

    <%= f.label :full_name %>
    <%= f.text_field :full_name %>             

    <%= f.label :company %>
    <%= f.text_field :company %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= image_tag current_user.profile_pic, :title => "title", :class => "class" %>
