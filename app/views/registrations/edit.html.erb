<div class="devise_form" id="stylized">
<img class="profile_pic" src="<%= current_user.profile_pic.nil? ? "/images/blankprofilepic.png" : current_user.profile_pic %>" width="50" height="50" title="title">
<h1>Edit Profile</h1>
<p>Update Account Info</p>    

<% if request.referrer.include? "remoteurls" or params['layout'] == 'embed' %>
  <%= form_for(resource, :as => resource_name, :url => "#{registration_path(resource_name)}?layout=embed", :html => { :method => :put }) do |f| %>
    
    <%= f.label :email, raw("Corporate E-mail<span class=\"small\">Work e-mail preferred for verification</span>") %>
    <%= f.text_field :email %>
    <% if resource.errors[:email].present? %>
      <div class="error">
        <% resource.errors[:email].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %> 
   
    <%= f.label :phone_number, raw("Phone number<span class=\"small\">Personal cell number</span>") %>
    <%= f.text_field :phone_number %>
    <% if resource.errors[:phone_number].present? %>
      <div class="error">
        <% resource.errors[:phone_number].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>

    <%= f.label :full_name, raw("Full name<span class=\"small\">Your full name</span>") %>
    <%= f.text_field :full_name %>
    <% if resource.errors[:full_name].present? %>
      <div class="error">
        <% resource.errors[:full_name].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>             

    <%= f.label :company, raw("Company<span class=\"small\">Name of Employer</span>")  %>
    <%= f.text_field :company %>
    <% if resource.errors[:company].present? %>
      <div class="error">
        <% resource.errors[:company].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>

    <%= f.label :title, raw("Title<span class=\"small\">Title of your position</span>")  %>
    <%= f.text_field :title %>
    <% if resource.errors[:title].present? %>
      <div class="error">
        <% resource.errors[:title].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>

    <%= f.submit "Update", :class => "btn primary" %>
    <% end %>
<% else %>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>


    <p><%= f.label :token_authentication_key %><br />
    <%= User.authentication_token.blank? ? "Token Empty" : User.authentication_token %></p>

    <p><%= link_to "Generate Token", token_authentications_path(:user_id => current_user), :method => :post, :confirm => "Are you sure?"  %>
    <%= link_to "Delete Token", token_authentication_path(resource), :method => :delete, :confirm => "Are you sure?"  %></p>

    <% if resource.authentication_token %>
      <p>You can use this url to login<br />
      <%= link_to "http://localhost:3000#{root_path(:auth_token => resource.authentication_token)}", root_path(:auth_token => resource.authentication_token)  %></p>
    <% end %>

    <%= f.label :email, raw("Corporate E-mail<span class=\"small\">Work e-mail preferred for verification</span>") %>
    <%= f.text_field :email %>
    <% if resource.errors[:email].present? %>
      <div class="error">
        <% resource.errors[:email].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %> 
   
    <%= f.label :phone_number, raw("Phone number<span class=\"small\">Personal cell number</span>") %>
    <%= f.text_field :phone_number %>
    <% if resource.errors[:phone_number].present? %>
      <div class="error">
        <% resource.errors[:phone_number].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>

    <%= f.label :full_name, raw("Full name<span class=\"small\">Your full name</span>") %>
    <%= f.text_field :full_name %>
    <% if resource.errors[:full_name].present? %>
      <div class="error">
        <% resource.errors[:full_name].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>             

    <%= f.label :company, raw("Company<span class=\"small\">Name of Employer</span>")  %>
    <%= f.text_field :company %>
    <% if resource.errors[:company].present? %>
      <div class="error">
        <% resource.errors[:company].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>

    <%= f.label :title, raw("Title<span class=\"small\">Title of your position</span>")  %>
    <%= f.text_field :title %>
    <% if resource.errors[:title].present? %>
      <div class="error">
        <% resource.errors[:title].each do |msg| %>    
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>
       
  
    <%= f.submit "Update", :class => "btn primary" %>
    <% end %>
<% end %>

  <!-- <h3>Cancel my account</h3>

  <p>Unhappy? <#%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p> -->

  <div class="spacer"></div>  
</div> 

