<!DOCTYPE html>
<html>
<head>
  <title>Avouch</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'embed/reset.css' %>
  <%= stylesheet_link_tag 'embed/custom.css' %>  
  <%= stylesheet_link_tag 'embed/text.css' %> 

  
   
  <%= javascript_include_tag :defaults, 'jquery.popupwindow' %>
  
  <%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>
  <!--[if IE]><%= stylesheet_link_tag 'ie.css', :media => 'screen, projection' %><![endif]-->
  
  
  <%= csrf_meta_tag %>
</head>
<body>
  <% if user_signed_in? %>
  <% else %>
    <%= link_to "Sign in", authentications_closewindowprotected_path, :rel => "window800", :class => "auth_popup" %>
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :rel => "window800", :class => "auth_popup" %>
    <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :rel => "window800", :class => "auth_popup"  %>
  <% end %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>


