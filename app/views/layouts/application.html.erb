<% session.delete(:return_to) %>  
<!DOCTYPE html>
<html>
<head>
  <title>iAvouch</title>
  <%= stylesheet_link_tag "screen" %>
  <%= stylesheet_link_tag "embeds/blog-embed" %>
  <%= stylesheet_link_tag "../javascripts/fancybox/jquery.fancybox-1.3.4" %>
    
   
  <%= javascript_include_tag :defaults, 'jquery.popupwindow', '/audiojs/audio.js', 'fancybox/jquery.fancybox-1.3.4.js' %>


  
  
  <%= csrf_meta_tag %>
  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-29711891-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</head>
<%= content_for?(:body) ? yield(:body) : raw("<body>") %>
  <div class="top-spacer">  
    <% flash.each do |key, value| %>
      <div class="alert-message <%= key %>" data-alert="alert"><%= value %></div>
    <% end %> 
    <div>
      <p style="float:right;color:white;">
        <% if user_signed_in? %>
          <%= link_to "Access your Dashboard", admin_sites_path, :style => "color:white;" %>
        <% end %>
      </p>
    </div>
  </div>

  <!-- main container -->
  <div class="columns"> 
    <div class="bg">
      <!-- header -->
      <div class="showborder" id="header">
        <p class="showborder" id="logo">iAvouch</p> 
        <p class="showborder" id="logo-tagline">references redefined</p>
      </div>
      
      <!-- content -->
      <div class="showborder" id="main-content">
        
        <%= yield %>

      </div>  

    </div>
  </div>
  <div class="clear"></div>
